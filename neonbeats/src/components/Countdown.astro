const colores = ["rgb(61, 222, 56)","purple","yellow","red","palevioletred","rgb(85, 198, 251)"];

const leds = [];
const cantidad = 100

for (let i = 0; i < cantidad; i++) {
    const numColor = Math.floor(Math.random() * colores.length);
    const alt = Math.floor((Math.random() * 900) +220)+"px";
    const izq = (Math.random() * 2000)+"px";
    const delay = (Math.random() * 2)+"s";
    leds.push({
        color: colores[numColor],
        altura : alt,
        izquierda: izq,
        delay : delay
    })
}
